@model SecureWebApp.Models.LoginViewModel
@{
    ViewData["Title"] = "Sign in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign in - SecureWebApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg-primary: #f5f5f5;
            --bg-secondary: #ffffff;
            --text-primary: #0d0d0d;
            --text-secondary: #666666;
            --text-muted: #8e8e8e;
            --border-color: #e0e0e0;
            --accent-color: #da7756;
            --accent-hover: #c96a4a;
            --error-color: #dc3545;
        }

        * {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            background-color: var(--bg-primary);
            color: var(--text-primary);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .login-container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .login-card {
            width: 100%;
            max-width: 400px;
        }

        .logo {
            text-align: center;
            margin-bottom: 2rem;
        }

        .logo-icon {
            width: 48px;
            height: 48px;
            background: linear-gradient(135deg, #da7756 0%, #b8533d 100%);
            border-radius: 12px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1rem;
        }

        .logo-icon svg {
            width: 28px;
            height: 28px;
            color: white;
        }

        .logo-text {
            font-size: 1.5rem;
            font-weight: 600;
            letter-spacing: -0.03em;
            color: var(--text-primary);
        }

        .login-title {
            text-align: center;
            font-size: 1.125rem;
            font-weight: 400;
            color: var(--text-secondary);
            margin-bottom: 2rem;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .form-label {
            display: block;
            font-size: 0.875rem;
            font-weight: 500;
            color: var(--text-primary);
            margin-bottom: 0.5rem;
        }

        .form-input {
            width: 100%;
            padding: 0.75rem 1rem;
            font-size: 1rem;
            border: 1px solid var(--border-color);
            border-radius: 8px;
            background: var(--bg-secondary);
            color: var(--text-primary);
            transition: border-color 0.15s ease, box-shadow 0.15s ease;
            outline: none;
        }

        .form-input:focus {
            border-color: var(--accent-color);
            box-shadow: 0 0 0 3px rgba(218, 119, 86, 0.15);
        }

        .form-input::placeholder {
            color: var(--text-muted);
        }

        .form-check {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin: 1.25rem 0;
        }

        .form-check-input {
            width: 1rem;
            height: 1rem;
            border: 1px solid var(--border-color);
            border-radius: 4px;
            cursor: pointer;
        }

        .form-check-input:checked {
            background-color: var(--accent-color);
            border-color: var(--accent-color);
        }

        .form-check-label {
            font-size: 0.875rem;
            color: var(--text-secondary);
            cursor: pointer;
        }

        .btn-primary {
            width: 100%;
            padding: 0.875rem 1.5rem;
            font-size: 1rem;
            font-weight: 500;
            color: white;
            background: var(--accent-color);
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.15s ease, transform 0.1s ease;
        }

        .btn-primary:hover {
            background: var(--accent-hover);
        }

        .btn-primary:active {
            transform: scale(0.98);
        }

        .divider {
            display: flex;
            align-items: center;
            margin: 1.5rem 0;
            color: var(--text-muted);
            font-size: 0.8125rem;
        }

        .divider::before,
        .divider::after {
            content: "";
            flex: 1;
            height: 1px;
            background: var(--border-color);
        }

        .divider span {
            padding: 0 1rem;
        }

        .login-footer {
            text-align: center;
            font-size: 0.875rem;
            color: var(--text-secondary);
        }

        .login-footer a {
            color: var(--accent-color);
            text-decoration: none;
            font-weight: 500;
        }

        .login-footer a:hover {
            text-decoration: underline;
        }

        .alert {
            padding: 0.875rem 1rem;
            border-radius: 8px;
            font-size: 0.875rem;
            margin-bottom: 1rem;
        }

        .alert-danger {
            background: #fef2f2;
            border: 1px solid #fecaca;
            color: #dc2626;
        }

        .text-danger {
            color: var(--error-color);
            font-size: 0.8125rem;
            margin-top: 0.25rem;
            display: block;
        }

        .field-validation-error {
            color: var(--error-color);
            font-size: 0.8125rem;
            margin-top: 0.25rem;
            display: block;
        }

        /* Security Details Section */
        .security-section {
            margin-top: 3rem;
            padding-top: 2rem;
            border-top: 1px solid var(--border-color);
        }

        .security-toggle {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            font-size: 0.8125rem;
            color: var(--text-muted);
            cursor: pointer;
            background: none;
            border: none;
            padding: 0.5rem 1rem;
            margin: 0 auto;
            transition: color 0.15s ease;
        }

        .security-toggle:hover {
            color: var(--text-secondary);
        }

        .security-toggle svg {
            width: 16px;
            height: 16px;
            transition: transform 0.2s ease;
        }

        .security-toggle[aria-expanded="true"] svg {
            transform: rotate(180deg);
        }

        .security-content {
            margin-top: 1.5rem;
            padding: 1.5rem;
            background: var(--bg-secondary);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            font-size: 0.8125rem;
            color: var(--text-secondary);
            line-height: 1.6;
            display: none;
        }

        .security-content.show {
            display: block;
        }

        .security-content h3 {
            font-size: 0.9375rem;
            font-weight: 600;
            color: var(--text-primary);
            margin: 1.5rem 0 0.75rem 0;
        }

        .security-content h3:first-child {
            margin-top: 0;
        }

        .security-content p {
            margin: 0 0 0.75rem 0;
        }

        .security-content code {
            background: #f1f1f1;
            padding: 0.125rem 0.375rem;
            border-radius: 4px;
            font-family: ui-monospace, 'SF Mono', monospace;
            font-size: 0.75rem;
        }

        .security-content pre {
            background: #1e1e1e;
            color: #d4d4d4;
            padding: 1rem;
            border-radius: 8px;
            overflow-x: auto;
            font-family: ui-monospace, 'SF Mono', monospace;
            font-size: 0.75rem;
            line-height: 1.5;
            margin: 0.75rem 0;
        }

        .security-content pre code {
            background: none;
            padding: 0;
            color: inherit;
        }

        .security-table {
            width: 100%;
            border-collapse: collapse;
            margin: 1rem 0;
            font-size: 0.75rem;
        }

        .security-table th,
        .security-table td {
            padding: 0.75rem;
            text-align: left;
            border: 1px solid var(--border-color);
        }

        .security-table th {
            background: var(--bg-primary);
            font-weight: 600;
            color: var(--text-primary);
        }

        .security-table td {
            vertical-align: top;
        }

        .check-icon {
            color: #22c55e;
        }

        /* Page footer */
        .page-footer {
            padding: 1.5rem;
            text-align: center;
            font-size: 0.75rem;
            color: var(--text-muted);
        }

        .page-footer a {
            color: var(--text-muted);
            text-decoration: none;
        }

        .page-footer a:hover {
            color: var(--text-secondary);
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="logo">
                <div class="logo-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                    </svg>
                </div>
                <div class="logo-text">SecureWebApp</div>
            </div>

            <p class="login-title">Sign in to your account</p>

            <form asp-action="Login" asp-controller="Account" method="post">
